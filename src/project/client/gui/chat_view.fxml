<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/2.2" fx:controller="project.client.gui.ChatView">
    <children>
        <Label fx:id="usernameLabel" layoutX="14.0" layoutY="14.0" maxWidth="100.0" text="Username"/>
        <HBox layoutX="10.0" prefHeight="250.0" prefWidth="480.0" AnchorPane.topAnchor="45.0">
            <children>
                <VBox maxHeight="250.0" maxWidth="150.0" prefHeight="250.0" prefWidth="150.0">
                    <children>
                        <Label id="usernameLabel" alignment="CENTER" maxWidth="150.0" text="Users"
                               textAlignment="CENTER" underline="false"/>
                        <TextArea fx:id="usersTextArea" maxHeight="200.0" maxWidth="150.0" prefHeight="200.0"
                                  prefWidth="150.0" wrapText="true">
                            <VBox.margin>
                                <Insets top="20.0"/>
                            </VBox.margin>
                        </TextArea>
                    </children>
                    <padding>
                        <Insets fx:id="x1"/>
                    </padding>
                </VBox>
                <Separator maxWidth="30.0" orientation="VERTICAL" prefHeight="250.0" prefWidth="30.0"/>
                <VBox alignment="CENTER_RIGHT" maxHeight="250.0" maxWidth="300.0" prefHeight="250.0" prefWidth="300.0">
                    <children>
                        <TextArea fx:id="chatTextArea" maxHeight="220.0" prefWidth="220.0" wrapText="true"
                                  VBox.margin="$x1"/>
                        <HBox maxHeight="30.0" prefHeight="30.0" prefWidth="200.0">
                            <children>
                                <TextField fx:id="messageTextField" maxHeight="37.0" maxWidth="210.0" prefWidth="210.0"
                                           promptText="message">
                                    <HBox.margin>
                                        <Insets fx:id="x2"/>
                                    </HBox.margin>
                                </TextField>
                                <Button fx:id="sendMessageBtn" maxWidth="90.0" mnemonicParsing="false" onAction="#sendNewMessage"
                                        text="Send"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>

    </children>
</AnchorPane>
